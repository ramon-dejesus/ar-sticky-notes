.top-actions-element {
    display: flex;
    flex-direction: row-reverse;
    width: 100%;
    height: 48px;
    padding: 8px;
    justify-content: flex-start;
    align-items: center;
    background-color: transparent;
}

.open-all-notes-btn,
.close-all-notes-btn,
.open-whiteboard-btn,
.create-note-from-list-btn,
.delete-note-btn,
.save-note-btn {
    width: 32px;
    height: 32px;
    margin: 0 8px;
    background-color: transparent;
    border-width: 0;
    background-size: contain;
    background-repeat: no-repeat;
    background-position: center;
    align-self: center;
    flex-shrink: 0;
}

.open-all-notes-btn {
    background-image: url("project://database/Assets/Scenes/ARStickyNotes/Icons/hamburger-notes.svg?fileID=7388822144124034973&guid=cc7be6a876c5f42cc86d42a648620e41&type=3#hamburger-notes");
}
.close-all-notes-btn {
    background-image: url("project://database/Assets/Scenes/ARStickyNotes/Icons/hamburger-notes-close.svg?fileID=7388822144124034973&guid=2fa5c78b8849443fab0721d63379796f&type=3#hamburger-notes-close");
}
.open-whiteboard-btn {
    background-image: url("project://database/Assets/Scenes/ARStickyNotes/Icons/whiteboard.svg?fileID=7388822144124034973&guid=939a363b952851e479581cc597013b1f&type=3#whiteboard");
}
.create-note-from-list-btn,
.create-note-btn {
    background-image: url("project://database/Assets/Scenes/ARStickyNotes/Icons/create-note.svg?fileID=7388822144124034973&guid=3a28229ffa44e4ceb9770c01d159a09e&type=3#create-note");
}
.delete-note-btn,
.delete-list-item-btn {
    background-image: url("project://database/Assets/Scenes/ARStickyNotes/Icons/delete.svg?fileID=7388822144124034973&guid=f7e49557c7643421e85a5325baeef3e7&type=3#delete");
}
.save-note-btn {
    background-image: url("project://database/Assets/Scenes/ARStickyNotes/Icons/save.svg?fileID=7388822144124034973&guid=f308d299435ec46d6970218868c15a82&type=3#save");
}

.notes-list-container {
    width: 100%;
    height: auto;
    margin-top: 48px;
    background-color: transparent;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    align-items: stretch;
    overflow: hidden;
    padding-bottom: 60px;
}

.notes-list-view {
    flex-grow: 1;
    width: 100%;
    background-color: transparent;
}

/* List rows */
.row {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: flex-start;
    background-color: rgb(255, 212, 42);
    height: 64px;
    min-height: 64px;
    width: 100%;
    padding: 8px 12px;
    margin: 2px 0;
    border-bottom-width: 1px;
    border-bottom-color: #e0c200;
}

/* Text container inside a row */
.content {
    flex-grow: 1;
    min-width: 0;
    display: flex;
    flex-direction: column;        /* Title first, Date second */
    justify-content: center;
}

.title-label {
    font-size: 14px;
    color: #222222;
    white-space: nowrap;
    overflow: hidden;
    width: 100%;
    margin-bottom: 2px;       /* replaces gap */
}

.date-label {
    font-size: 12px;
    color: #444444;
    white-space: nowrap;
    overflow: hidden;
    width: 100%;
}

/* Delete button at the far right, perfectly centered vertically */
.delete-list-item-btn {
    margin-left: auto;             /* push to the far right */
    width: 28px;
    height: 28px;
    background-color: transparent;
    border-width: 0;
    background-size: contain;
    background-repeat: no-repeat;
    background-position: center;
    align-self: center;            /* vertical centering in the row */
}

/* Optional: tighten default ListView item container spacing */
.unity-list-view__item {
    padding: 0;
    margin: 0;
}

.bottom-bar {
    position: absolute;       /* fixed not supported */
    left: 0;
    right: 0;
    bottom: 0;
    width: 100%;
    height: 60px;
    background-color: transparent;
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 8px;
}

.create-note-btn {
    width: 48px;
    height: 48px;
    background-color: transparent;
    border-width: 0;
    background-size: contain;
    background-repeat: no-repeat;
    background-position: center;
    -unity-background-scale-mode: scale-to-fit;
} 